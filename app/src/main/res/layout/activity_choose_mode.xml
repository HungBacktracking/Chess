<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:src="@drawable/baseline_arrow_back_24" />

    <!-- Top navigation bar -->
    <LinearLayout
        android:id="@+id/top_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MATCH"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="35dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Tab layout for FIND MATCH, PLAY TOGETHER, PLAY WITH AI -->
    <LinearLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_navigation"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="3">

        <!-- Define buttons for each tab -->
        <Button
            android:id="@+id/play_online_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FIND MATCH"
            android:background="@drawable/rounded_button_yellow"
            android:textColor="#000000"
            android:layout_marginHorizontal="15dp"
            android:layout_weight="1"
            android:layout_marginBottom="8dp"/>

        <!-- Transformer Mode Button -->
        <Button
            android:id="@+id/play_offline_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLAY TOGETHER"
            android:background="@drawable/rounded_button"
            android:layout_weight="1"
            android:layout_marginHorizontal="15dp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <!-- Hidden Piece Mode Button -->
        <Button
            android:id="@+id/play_AI_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VS COMPUTER"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:layout_marginHorizontal="15dp"
            android:textColor="#000000"/>
    </LinearLayout>

    <!-- Game mode selection area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tab_layout"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:padding="16dp">

        <!-- Classic Mode Button -->
        <Button
            android:id="@+id/classic_mode_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLASSIC MODE"
            android:drawableLeft="@drawable/chess_classic"
            android:background="@drawable/rounded_mode_button"
            android:textColor="#FFFFFF"
            android:drawablePadding="20dp"
            android:layout_marginBottom="15dp"/>

        <!-- Transformer Mode Button -->
        <Button
            android:id="@+id/transformer_mode_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TRANSFORMER MODE"
            android:drawableLeft="@drawable/chess_transform"
            android:background="@drawable/rounded_mode_button"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="15dp"/>

        <!-- Hidden Piece Mode Button -->
        <Button
            android:id="@+id/hidden_piece_mode_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HIDDEN PIECE MODE"
            android:drawableLeft="@drawable/chess_hidden"
            android:background="@drawable/rounded_mode_button"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</RelativeLayout>
