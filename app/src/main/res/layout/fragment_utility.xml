<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/utilityFragmentStyle">


    <TextView
        android:id="@+id/utility_header"
        style="@style/utilityHeader"/>

    <FrameLayout
        android:id="@+id/utility_frame"
        style="@style/preferencesStyle"
        android:layout_below="@+id/utility_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_height="200dp" />

    <Button
        android:layout_below="@+id/utility_frame"
        style="@style/utilityCloseButton" />

</RelativeLayout>